{
    "compilerOptions": {
      "baseUrl": ".",
      "lib": [
        "es2016"
      ],
      "paths": {
        "*": [
          "src/*"
        ]
      },
      "allowJs": true,
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist"
    },
    "include": [
      "./src/**/*.ts",
    ],
    "exclude": [
      "node_modules",
      "config"
    ]
  }